# ─────────────────────────────────────────
# InsureDesk — Environment Variables
# Copy this file to .env and fill in values
# NEVER commit .env to GitHub
# ─────────────────────────────────────────

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5500

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=8h

# ─── SALESFORCE ───────────────────────────
SF_LOGIN_URL=https://login.salesforce.com
SF_USERNAME=your_salesforce_username@company.com
SF_PASSWORD=your_salesforce_password
SF_SECURITY_TOKEN=your_salesforce_security_token
SF_CLIENT_ID=your_connected_app_client_id
SF_CLIENT_SECRET=your_connected_app_client_secret

# ─── ZENDESK ──────────────────────────────
ZD_SUBDOMAIN=yourcompany
ZD_EMAIL=admin@yourcompany.com
ZD_API_TOKEN=your_zendesk_api_token

# ─── REDIS (Optional - for caching) ───────
REDIS_URL=redis://localhost:6379

# ─── TWILIO (Optional - for VoIP) ─────────
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567
